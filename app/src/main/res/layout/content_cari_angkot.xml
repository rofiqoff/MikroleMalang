<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#cfd8dc"
    tools:context="com.example.whitehat.mikroletmalang.pencarian.CariAngkotActivity"
    tools:showIn="@layout/activity_cari_angkot">

    <LinearLayout
        android:id="@+id/linear_cari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_location_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_text_posisi_awal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tempat Awal"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@android:color/transparent"
                android:lineSpacingExtra="4dp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:imeOptions="actionNext"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edit_text_posisi_akhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tujuan"
                android:singleLine="true"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:textStyle="normal"
                android:imeOptions="actionSearch"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/cari_angkot_tujuan"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@drawable/ic_search_24dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#455a64"
        android:layout_below="@id/linear_cari"/>

    <RelativeLayout
        android:id="@+id/linear_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/hasil_tujuan_angkot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anda disarankan menggunakan : AL "
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/pbLoading_cari_angkot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#455a64"
        android:layout_below="@id/linear_hasil"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_cari_angkot"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view2" />

</RelativeLayout>
